@model Arma3TacMapWebApp.Entities.User

@{
    ViewData["Title"] = "Delete a user";
}
<div class="container">
    <h1>Delete a user</h1>

    <h3>Are you sure you want to delete "@Model.UserLabel"?</h3>

    <p>All his maps will be definitively lost !</p>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserLabel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserLabel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SteamId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SteamId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsService)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsService)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>