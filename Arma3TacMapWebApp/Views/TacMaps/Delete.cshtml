@model Arma3TacMapWebApp.Entities.TacMap

@{
    ViewData["Title"] = "Supprimer une carte tactique";
}
<div class="container">
    <h1>Supprimer une carte tactique</h1>

    <h3>Êtes vous sûre de vouloir supprimer cette carte tactique?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Created)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Label)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Label)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.WorldName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.WorldName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="TacMapID" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
    </div>
</div>